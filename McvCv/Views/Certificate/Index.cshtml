@using McvCv.Models.Entity
@model List<TblCertifications>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->

                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var x in Model)
                                    {

                                        <div class="time-label">
                                            @if (x.ID % 2 == 0)
                                            {
                                                <a href="/Certificate/sertifikaGetir/@x.ID" class="btn btn-success">
                                                    <span class="bg-success">
                                                        @x.date
                                                    </span>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="/Certificate/sertifikaGetir/@x.ID" class="btn btn-primary">
                                                    <span class="bg-primary">
                                                        @x.date
                                                    </span>
                                                </a>
                                            }

                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i> 12:05</span>
                                                <div class="timeline-body">
                                                    @x.description
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <a href="/Certificate/yeniSertifika" class="btn btn-danger">Yeni Sertifika Ekle</a>
                            </div>
                        </div>


                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
</body>
</html>

