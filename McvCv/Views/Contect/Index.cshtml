@using McvCv.Models.Entity
@model List<TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var x in Model)
                                    {


                                        <div class="time-label">
                                            <span class="bg-info">
                                                @(((DateTime)x.date).ToString("dd-MMM-yyyy"))
                                            </span>
                                        </div>

                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i></i>@x.mail</span>
                                                <h3 class="timeline-header"><a href="#">@x.name_surname</a> @x.topic</h3>
                                                <div class="timeline-body">
                                                    @x.message
                                                    <a href="/Contect/mesajSil/@x.ID" class="btn btn-danger btn-sm float-right">
                                                        <i class="fas fa-trash"></i> Mesajı Sil
                                                    </a>

                                                </div>
                                                
                                            </div>
                                        </div>
                                        
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
</body>
</html>


