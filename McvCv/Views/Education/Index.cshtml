@using McvCv.Models.Entity
@model List<TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Eğitimler Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.title</td>
            <td>@item.subtitle1</td>
            <td>@item.subtitle2</td>
            <td>@item.GNO</td>
            <td>@item.date</td>
            <td><a href="/Education/egitimSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Education/egitimGuncelle/@item.ID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }

</table>
<a href="/Education/yeniEgitim" class="btn btn-primary">Yeni Eğitim Ekle</a>

