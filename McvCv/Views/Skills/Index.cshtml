@using McvCv.Models.Entity
@model List<TblSkills>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{string color = "";}
@{string labelColor = "";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->

                            <div class="card-body">

                                <a href="/Skills/yeniYetenek" class="btn btn-info">Yeni Yetenek Ekle</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            if (x.ratio >= 0 && x.ratio <= 50)
                                            {
                                                color = "progress-bar bg-danger ";
                                                labelColor = "badge bg-danger";
                                            }
                                            if (x.ratio > 50 && x.ratio <= 70)
                                            {
                                                color = "progress-bar bg-warning ";
                                                labelColor = "badge bg-warning";
                                            }
                                            if (x.ratio > 70 && x.ratio <= 84)
                                            {
                                                color = "progress-bar bg-primary ";
                                                labelColor = "badge bg-primary";
                                            }
                                            if (x.ratio > 84 && x.ratio <= 100)
                                            {
                                                color = "progress-bar bg-success ";
                                                labelColor = "badge bg-success";
                                            }
                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.skills</td>

                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@color" style="width: @x.ratio%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelColor">@x.ratio%</span></td>
                                                <td>
                                                    <a class=" btn btn-info btn-sm" href="/Skills/yetenekDüzenle/@x.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class=" btn btn-danger btn-sm" href="/Skills/yetenekSil/@x.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                </td>


                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>

