@model McvCv.Models.Entity.TblSkills
@{
    ViewBag.Title = "yetenekDüzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yetenek Güncelleme Sayfası</h4>
<br />
<form method="post">
   
    <br />
    @Html.Label("Yetenek")
    @Html.TextBoxFor(x => x.skills, new { @class = "form-control" })
    <br />
    @Html.Label("Derece")
    @Html.TextBoxFor(x => x.ratio, new { @class = "form-control" })
    
    <br />

    <button class="btn btn-info">Güncelle</button>
</form>

